<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>setBean</managed-bean-name>
		<managed-bean-class>beans.SetBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>queryBean</managed-bean-name>
		<managed-bean-class>beans.QueryBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bookingBean</managed-bean-name>
		<managed-bean-class>beans.BookingBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

		<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>queryAvailability</from-outcome>
			<to-view-id>/queryAvailability.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
		<navigation-rule>
			<display-name>index.xhtml</display-name>
			<from-view-id>/index.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>setAvailability</from-outcome>
				<to-view-id>/setAvailability.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>queryAvailability.xhtml</display-name>
			<from-view-id>/queryAvailability.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>volverAInicio</from-outcome>
				<to-view-id>/index.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>setAvailability.xhtml</display-name>
			<from-view-id>/setAvailability.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>volverInicio</from-outcome>
				<to-view-id>/index.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>queryAvailability.xhtml</display-name>
			<from-view-id>/queryAvailability.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>ok</from-outcome>
				<to-view-id>/booking.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>booking.xhtml</display-name>
			<from-view-id>/booking.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>volverInicio</from-outcome>
				<to-view-id>/index.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
</faces-config>
